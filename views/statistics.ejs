        <li><a href="/statistics" class="active">EstatÃ­sticas</a></li>
        <li class="user-menu">
          <span>ğŸ‘¤ <%= user.name %></span>
          <a href="/logout" class="btn-logout">Sair</a>
        </li>
      </ul>
    </div>
  </nav>

  <main class="main-content">
    <div class="container">
      <div class="page-header">
        <h1>ğŸ“Š EstatÃ­sticas do Sistema</h1>
        <p>VisÃ£o geral do motor de busca</p>
      </div>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
      <% } %>

      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">ğŸŒ</div>
          <div class="stat-content">
            <h3><%= totalWebsites %></h3>
            <p>Websites Indexados</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ”</div>
          <div class="stat-content">
            <h3><%= totalSearches %></h3>
            <p>Buscas Realizadas</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">ğŸ”‘</div>
          <div class="stat-content">
            <h3><%= totalKeywords %></h3>
            <p>Palavras-chave Ãšnicas</p>
          </div>
        </div>
      </div>

      <div class="section">
        <h2>ğŸ” Keywords Mais Usadas</h2>
        <% if (topKeywords.length > 0) { %>
          <div class="keywords-chart">
            <% topKeywords.forEach((item, index) => { %>
              <div class="keyword-bar">
                <div class="keyword-label">
                  <span class="keyword-rank">#<%= index + 1 %></span>
                  <a href="/search?q=<%= item.word %>"><%= item.word %></a>
                </div>
                <div class="keyword-bar-container">
                  <div class="keyword-bar-fill" style="width: <%= (item.count / topKeywords[0].count) * 100 %>%"></div>
                </div>
                <span class="keyword-count"><%= item.count %> websites</span>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p class="empty-state">Nenhuma keyword cadastrada ainda.</p>
        <% } %>
      </div>

      <div class="section">
        <h2>ğŸ•’ HistÃ³rico de Buscas Recentes</h2>
        <% if (recentSearches.length > 0) { %>
          <div class="searches-table">
            <table>
              <thead>
                <tr>
                  <th>Busca</th>
                  <th>Resultados</th>
                  <th>Data e Hora</th>
                  <th>UsuÃ¡rio</th>
                </tr>
              </thead>
              <tbody>
                <% recentSearches.forEach(search => { %>
                  <tr>
                    <td>
                      <a href="/search?q=<%= search.query %>">
                        ğŸ” <%= search.query %>
                      </a>
                    </td>
                    <td><%= search.resultsCount %></td>
                    <td><%= new Date(search.executedAt).toLocaleString('pt-BR') %></td>
                    <td><%= search.metadata && search.metadata.username ? search.metadata.username : 'AnÃ´nimo' %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="empty-state">Nenhuma busca realizada ainda.</p>
        <% } %>
      </div>
    </div>
  </main>

  <footer class="footer">
